option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: prokart.wsgi
  container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python prokart-django/manage.py migrate --noinput"
    leader_only: true
  02_createsuperuser:
    command: "source /opt/python/run/venv/bin/activate && python prokart-django/manage.py createsuper"
    leader_only: true

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "prokart.settings"
    "PYTHONPATH": "/opt/python/current/app/prokart:$PYTHONPATH"
    "ALLOWED_HOSTS": ".elasticbeanstalk.com"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: prokart.wsgi
    NumProcesses: 3
    NumThreads: 20