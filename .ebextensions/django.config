option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: prokart.wsgi
  container_commands:
  01_migrate:
    command: "/var/app/venv/staging-LQM1lest/bin/activate && python manage.py migrate"
    leader_only: true
  02_superuser:
    command: "/var/app/venv/staging-LQM1lest/bin/activate && python manage.py createsuper"
    leader_only: true
  03_collectstatic:
    command: "/var/app/venv/staging-LQM1lest/bin/activate && python manage.py collectstatic"
option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "prokart.settings"
    "PYTHONPATH": "/opt/python/current/app/prokart:$PYTHONPATH"
    "ALLOWED_HOSTS": ".elasticbeanstalk.com"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: prokart.wsgi
    NumProcesses: 3
    NumThreads: 20